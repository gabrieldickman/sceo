generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String    
  userId   String    // ID do usuário do clerk
  products Product[]

  @@unique([name, userId]) // garante nome único por usuário
  @@index([userId])
}

model Brand {
  id       Int       @id @default(autoincrement())
  name     String    
  userId   String    // ID do usuário do clerk
  products Product[]

  @@unique([name, userId]) // garante nome único por usuário
  @@index([userId])
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  quantity    Int
  price       Float
  size        String
  categoryId  Int
  brandId     Int
  userId      String    // ID do usuário do Clerk

  category Category @relation(fields: [categoryId], references: [id])
  brand    Brand    @relation(fields: [brandId], references: [id])
  sales    Sale[]

  @@index([userId]) 
}

model Sale {
  id          Int       @id @default(autoincrement())
  productId   Int
  quantity    Int
  totalPrice  Float
  saleDate    DateTime  @default(now())
  userId      String

  product     Product   @relation(fields: [productId], references: [id])

  @@index([userId])
}
